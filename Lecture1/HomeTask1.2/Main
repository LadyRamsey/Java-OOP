package com.gmail.gunkophotos;

public class Main {

	public static void main(String[] args) {
		
		Point cA = new Point(4, 4);
		Point cB = new Point(7, 2);
		
		Circle circleOne = new Circle(cA, cB);
		
		System.out.println("The perimetr of circle is " + circleOne.getPerimetr());
		System.out.println("The area of circle is " + circleOne.getArea());
		
		Point tA = new Point(8,2);
		Point tB = new Point(5,8);
		Point tC = new Point(2,4);
		
		Triangle triangleOne = new Triangle(tA,tB,tC);
		
		System.out.println("The perimetr of triangle is " + triangleOne.getPerimetr());
		System.out.println("The area of triangle is " + triangleOne.getArea());
		
		Point rA = new Point(2,2);
		Point rB = new Point(2,5);
		Point rC = new Point(7,5);
		Point rD = new Point(7,2);
		
		Rectangle rectOne = new Rectangle(rA,rB,rC,rD);
		
		System.out.println("The perimetr of rectangle is " + rectOne.getPerimetr());
		System.out.println("The area of rectangle is " + rectOne.getArea());
	}

}
